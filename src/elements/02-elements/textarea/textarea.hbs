<div class="ys-textarea{{#if isInverted}} ys-textarea--light{{/if}}">
    <label class="ys-textarea__label">
        <span class="ys-textarea__label-text">Label for textarea</span>
        <textarea class="ys-textarea__control" rows="5" cols="60" {{#if isDisabled}}
            disabled{{/if}}{{#if isReadonly}}readonly{{/if}}>{{#if isReadonly}}Non-editable user input{{/if}}</textarea>
    </label>
    {{#if hasGuidance}}
    <p class="ys-textarea__guidance{{#if isInvalid}} ys-textarea__guidance--error{{/if}}">Guidance message for textarea</p>
    {{/if}}
</div>